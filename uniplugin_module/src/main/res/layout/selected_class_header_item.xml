<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mSelectedClass"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    app:layout_constraintTop_toBottomOf="@+id/mTitleTv"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mNumTv"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="小/林班编号"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/mLine1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toEndOf="@+id/mNumTv"
        app:layout_constraintTop_toTopOf="@+id/mNumTv"
        app:layout_constraintBottom_toBottomOf="@+id/mNumTv"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mAddressTv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="林场划分"
        app:layout_constraintStart_toEndOf="@+id/mLine1"
        app:layout_constraintTop_toTopOf="@+id/mNumTv"
        app:layout_constraintBottom_toBottomOf="@+id/mNumTv"
        app:layout_constraintEnd_toStartOf="@+id/mSelectedTv"/>

    <View
        android:id="@+id/mLine2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintStart_toEndOf="@+id/mAddressTv"
        app:layout_constraintEnd_toStartOf="@+id/mSelectedTv"
        app:layout_constraintTop_toTopOf="@+id/mLine1"
        app:layout_constraintBottom_toBottomOf="@+id/mLine1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mSelectedTv"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="操作"
        app:layout_constraintTop_toTopOf="@+id/mNumTv"
        app:layout_constraintBottom_toBottomOf="@+id/mNumTv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>